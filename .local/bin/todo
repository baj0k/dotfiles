#!/bin/sh

TODO=$XDG_CACHE_HOME/.T0D0
TEMP=/tmp/todo.tmp

[ $# -eq 0 ] && {
		nl -n ln <$TODO
		exit 0
		}

usage() {
	printf '\033[0musage: %s <add|rm> [text|n]\n' `basename $0`
}

in_place() {
	:>$TEMP || exit 1
	sed "$@" <$TODO >$TEMP && mv $TEMP $TODO || rm $TEMP
}

case "$1" in
add)
	shift
	echo "$@" >>$TODO
	;;
rm)
	shift
	in_place "$@d" && todo
	;;
*)
	usage
	;;
esac
